<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Arduino_App_16.CommunicationPage"
             Title="Communication">
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Recieved message:" ></Label>

            <Label x:Name="RecMes" ></Label>
            <Entry x:Name="InputText" Placeholder="Put in message here."></Entry>
            <Button Text="Send Message"
                    x:Name="ButtonLEDToggle"
                    BackgroundColor="Gray"
                    Clicked="Toggle_LED_Clicked"></Button>
            <Label x:Name="recieved" ></Label>
            <Label x:Name="tempC" ></Label>
            <Label Text="Preprogrammed messages:" ></Label>

            <Label x:Name="Info1" ></Label>
            <Entry x:Name="Mes1" Placeholder="Put the first message here."></Entry>

            <Label x:Name="Info2" ></Label>
            <Entry x:Name="Mes2" Placeholder="Put the second message here."></Entry>

            <Label x:Name="Info3" ></Label>
            <Entry x:Name="Mes3" Placeholder="Put the third message here."></Entry>

            <Button Text="Change Messages"
                    x:Name="UpdateMes"
                    BackgroundColor="Gray"
                    Clicked="UpdateMessages"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>